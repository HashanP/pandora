<div class="panel panel-primary">
  <div class="panel-heading">
  Quiz Results
    <div class="pull-right">
      <a href="/courses/{{id}}/{{section}}/{{index}}">
      <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 col-md-offset-9">
        <select class="criterion form-control">
          <option value="best" {{#best}}selected{{/best}}>Best Score</option>
          <option value="average" {{#average}}selected{{/average}}>Average Score</option>
          <option value="first" {{#first}}selected{{/first}}>First Score</option>
        </select>
      </div>
    </div>
    <div class="svg"></div>
  </div>
</div>
