<div class="row">
  <div class="editor-toolbar">
	{{#rich}}
      <div class=" col-md-9" role="toolbar">
        <div class="row">
          <div class="col-md-9 col-lg-8 btn-toolbar">
            <div class="btn-toolbar">
          		<div class="btn-group editor-formatting">
          		  <button class="btn btn-default" type="button" value="bold"><i class="fa fa-bold"></i></button>
          		  <button class="btn btn-default" type="button" value="italic"><i class="fa fa-italic"></i></button>
          		  <button class="btn btn-default" type="button" value="underline"><i class="fa fa-underline"></i></button>
          		</div>
          		<div class="btn-group editor-formatting">
          		  <button class="btn btn-default" type="button" value="insertOrderedList"><i class="fa fa-list-ol"></i></button>
          		  <button class="btn btn-default" type="button" value="insertUnorderedList"><i class="fa fa-list-ul"></i></button>
          		</div>
          		<div class="btn-group editor-formatting">
          		  <button class="btn btn-default" type="button" value="subscript"><i class="fa fa-subscript"></i></button>
          		  <button class="btn btn-default" type="button" value="superscript"><i class="fa fa-superscript"></i></button>
          		</div>
              <div class="btn-group">
                <button class="btn btn-default image" type="button"><i class="fa fa-file-image-o"></i></button>
              </div>
            </div>
          </div>
          <div class="col-md-3 col-md-4">
            <select class="font-control form-control">
              <option value="Helvetica Neue" selected>Helvetica Neue</option>
              <option value="Arial">Arial</option>
              <option value="Arial Black">Arial Black</option>
              <option value="Comic Sans MS">Comic Sans MS</option>
              <option value="Times New Roman">Times New Roman</option>
              <option value="Tahoma">Tahoma</option>
              <option value="Verdana">Verdana</option>
              <option value="Courier New">Courier New</option>
            </select>
          </div>
        </div>
      </div>
	{{/rich}}
	{{^rich}}
	  <div class="btn-group col-md-9">
		<button type="button" class="btn btn-default open-tab {{#editorOpen}}active{{/editorOpen}}" value="editor">Editor</button>
		<button type="button" class="btn btn-default open-tab {{^editorOpen}}active{{/editorOpen}}" value="preview">Preview</button>
      </div>
	{{/rich}}
	<div class="col-md-3">
	  <select class="editor-mode form-control">
  		<option value="rich-text-editor">Rich Text Editor</option>
  		<option value="latex">Latex</option>
      <option value="youtube">YouTube</option>
	  </select>
	</div>
  </div>

  <br/>
  <br/>
  <br/>

  <div class="col-md-12">
	{{#rich}}
	  <div contenteditable="true" class="editor-rich">{{model.data}}</div>
	{{/rich}}
	{{#latex}}
	  {{#editorOpen}}
		<div contenteditable="true" class="editor-latex">{{model.data}}</div>
	  {{/editorOpen}}
	  {{^editorOpen}}
		<div class="preview editor-preview">
		  <script type="math/tex">{{model.data}}</script>
		</div>
	  {{/editorOpen}}
	{{/latex}}
  {{#youtube}}
    <label>URL</label>
    <input type="text" class="editor-youtube form-control">
  {{/youtube}}
  </div>
</div>
